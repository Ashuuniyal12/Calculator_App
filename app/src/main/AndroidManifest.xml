<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartcalculator">

    <application
        android:allowBackup="true"
        android:icon="@drawable/calculator_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/calculator_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartCalculator">
        <activity android:name=".Gallary"></activity>
        <activity android:name=".EnterPassword" />
        <activity android:name=".CreatePassword" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>