<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingClass">


        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:gravity="end|center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp"
            app:layout_constraintBottom_toTopOf="@+id/screen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/lockbutton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.177" />

        <ImageButton
            android:id="@+id/lockbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="#00FFFFFF"
            android:onClick="lockPassword"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/lock"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="7">

        <Button
            android:id="@+id/ac"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/grey_button"
            android:text="AC"
            android:textSize="25sp"
            app:backgroundTint="#888686" />

        <Button
            android:id="@+id/openBracket"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ac"
            android:background="@drawable/grey_button"
            android:text="("
            android:textSize="30sp"
            app:backgroundTint="#888686" />

        <Button
            android:id="@+id/closeBracket"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/openBracket"
            android:background="@drawable/grey_button"
            android:text=")"
            android:textSize="30sp"
            app:backgroundTint="#888686" />

        <Button
            android:id="@+id/divide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/closeBracket"
            android:background="@drawable/circular_button"
            android:onClick="numberEvent"
            android:text="รท"
            android:textSize="40sp"
            app:backgroundTint="#FB8C00" />

        <Button
            android:id="@+id/seven"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/ac"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="7"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/eight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/openBracket"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/ac"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="8"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/nine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/closeBracket"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/openBracket"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="9"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/divide"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/nine"
            android:background="@drawable/circular_button"
            android:onClick="numberEvent"
            android:text="x"
            android:textSize="30sp"
            app:backgroundTint="#FB8C00" />

        <Button
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/seven"
            android:layout_marginTop="14dp"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="4"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/eight"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/four"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="5"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/nine"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/five"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="6"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/minus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/multiply"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/six"
            android:background="@drawable/circular_button"
            android:onClick="numberEvent"
            android:text="-"
            android:textSize="50sp"
            app:backgroundTint="#FB8C00" />

        <Button
            android:id="@+id/one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/four"
            android:layout_marginTop="15dp"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="1"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/five"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/one"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="2"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/five"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/two"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="3"
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/minus"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/three"
            android:background="@drawable/circular_button"
            android:onClick="numberEvent"
            android:text="+"
            android:textSize="40sp"
            app:backgroundTint="#FB8C00" />

        <Button
            android:id="@+id/zero"
            android:layout_width="159dp"
            android:layout_height="70dp"
            android:layout_below="@id/one"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="0"
            android:textSize="40sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/dot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/three"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/two"
            android:background="@drawable/darkgrey_button"
            android:onClick="numberEvent"
            android:text="."
            android:textSize="30sp"
            app:backgroundTint="#454444" />

        <Button
            android:id="@+id/equalto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/three"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/dot"
            android:background="@drawable/circular_button"
            android:text="="
            android:textSize="40sp"
            app:backgroundTint="#FB8C00" />
    </RelativeLayout>


</LinearLayout>
